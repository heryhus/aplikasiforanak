<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg1"
        tools:context=".Baru">
    <ImageView android:layout_width="150dp"
               android:layout_height="290dp"
               android:background="@drawable/doraemon"
               android:layout_alignParentLeft="true"
               android:layout_alignParentBottom="true"/>
    <ImageView android:layout_width="170dp"
               android:layout_height="250dp"
               android:background="@drawable/pin"
               android:layout_alignParentRight="true"
               android:layout_alignParentBottom="true"/>
    <ImageView android:layout_width="100dp"
               android:layout_height="130dp"
               android:background="@drawable/larva"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
            />
    
    
    
    <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageButton
                        android:layout_width="250dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ipinupin"
                        android:id="@+id/img1"/>
                <ImageButton
                            android:layout_width="250dp"
                           android:layout_height="100dp"
                           android:id="@+id/img2"
                           android:background="@drawable/dora"/>
                <ImageButton android:layout_width="250dp"
                           android:layout_height="100dp"
                           android:background="@drawable/goku"
                           android:id="@+id/img3"/>
        
        
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageButton android:layout_width="250dp"
                           android:layout_height="100dp"
                           android:background="@drawable/larva1"
                           android:layout_marginLeft="250dp"
                           android:id="@+id/img4"/>
                <ImageButton android:layout_width="250dp"
                           android:layout_height="100dp"
                           android:id="@+id/img5"
                             android:background="@drawable/bobo"
                           android:layout_marginLeft="250dp"/>
                <ImageButton android:layout_width="250dp"
                           android:layout_height="100dp"
                           android:background="@drawable/nusa"
                           android:id="@+id/img6"
                           android:layout_marginLeft="250dp"/>
        
            </LinearLayout>

</RelativeLayout>